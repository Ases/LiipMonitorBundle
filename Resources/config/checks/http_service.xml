<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liip_monitor.check.http_service.class">ZendDiagnostics\Check\HttpService</parameter>
    </parameters>

    <services>
        <service id="liip_monitor.check.http_service" public="false" class="%liip_monitor.check.http_service.class%">
            <argument>%liip_monitor.check.http_service.host%</argument>
            <argument>%liip_monitor.check.http_service.port%</argument>
            <argument>%liip_monitor.check.http_service.path%</argument>
            <argument>%liip_monitor.check.http_service.status_code%</argument>
            <argument>%liip_monitor.check.http_service.content%</argument>
            <tag name="liip_monitor.check" alias="http_service" />
        </service>
    </services>
</container>
